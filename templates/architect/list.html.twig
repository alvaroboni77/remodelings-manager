{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/datatables/dataTables.bootstrap4.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/datatables/buttons.bootstrap4.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/datatables/responsive.dataTables.min.css') }}">
{% endblock %}

{% block sectiontitle %}Arquitectos{% endblock %}

{% block body %}
{{ parent() }}
<!-- Content -->
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">                
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Listado de arquitectos</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for architect in architects %}
                                <tr>
                                    <td>{{ architect.id }}</td>
                                    <td>{{ architect.name }}</td>
                                    <td>{{ architect.email }}</td>
                                    <td>
                                        <a href="{{ path('architect_edit', { 'id': architect.id }) }}" class="btn btn-warning"><i class="fa fa-pencil"></i> Editar</a>
                                        <button data-route="{{ path('architect_delete', { 'id':architect.id }) }}" class="btn btn-danger removeArchitect"><i class="fa fa-trash-o"></i> Eliminar</button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">                
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Listado de arquitectos técnicos</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export-2" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for technicalArchitect in technicalArchitects %}
                                <tr>
                                    <td>{{ technicalArchitect.id }}</td>
                                    <td>{{ technicalArchitect.name }}</td>
                                    <td>{{ technicalArchitect.email }}</td>
                                    <td>
                                        <a href="{{ path('technical_architect_edit', { 'id': technicalArchitect.id }) }}" class="btn btn-warning"><i class="fa fa-pencil"></i> Editar</a>
                                        <button data-route="{{ path('technical_architect_delete', { 'id':technicalArchitect.id }) }}" class="btn btn-danger removeTechnicalArchitect"><i class="fa fa-trash-o"></i> Eliminar</button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('js/datatables/dataTables.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('js/datatables/dataTables.buttons.min.js') }}"></script>
    <script src="{{ asset('js/datatables/dataTables.responsive.min.js') }}"></script>
    <script src="{{ asset('js/datatables/buttons.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('js/jszip.min.js') }}"></script>
    <script src="{{ asset('js/pdfmake/pdfmake.min.js') }}"></script>
    <script src="{{ asset('js/pdfmake/vfs_fonts.js') }}"></script>
    <script src="{{ asset('js/datatables/buttons.html5.min.js') }}"></script>
    <script src="{{ asset('js/datatables/buttons.print.min.js') }}"></script>
    <script src="{{ asset('js/datatables/buttons.colVis.min.js') }}"></script>
    <script src="{{ asset('js/datatables-init.js') }}"></script>
    <script type="text/javascript">
        jQuery(document).ready(function($) {
            $('.removeArchitect').click(function() {
                if (confirm('¿Está seguro de eliminar este arquitecto?')) {
                    $.ajax({
                        method: "POST",
                        url: $(this).data('route'),
                        success: function() {
                            location.reload();
                        },
                        error: function(data) {
                            alert(data.responseText);
                        }
                    });
                }
            });
            $('.removeTechnicalArchitect').click(function() {
                if (confirm('¿Está seguro de eliminar este arquitecto técnico?')) {
                    $.ajax({
                        method: "POST",
                        url: $(this).data('route'),
                        success: function() {
                            location.reload();
                        },
                        error: function(data) {
                            alert(data.responseText);
                        }
                    });
                }
            });
        });
    </script>
{% endblock %}