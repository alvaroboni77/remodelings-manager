<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Architecture CRM{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
    {% block stylesheets %}{% endblock %}
</head>
<body>
<!-- Left Panel -->
<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">
        <div class="navbar-header">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand" href="{{ path('index') }}"><img src="{{ asset('images/logo.png') }}" alt="Logo"></a>
            <a class="navbar-brand hidden" href="{{ path('index') }}"><img src="{{ asset('images/logo_thumb.png') }}" alt="Logo"></a>
        </div>
        <div id="main-menu" class="main-menu collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="{{ path('index') }}"><i class="menu-icon fa fa-dashboard"></i>Dashboard</a>
                </li>
                <li class="menu-item-has-children active dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="menu-icon fa fa-building-o"></i>Proyectos de obra</a>
                    <ul class="sub-menu children dropdown-menu">
                        <li><i class="fa fa-table"></i><a href="#">Listado</a></li>
                        <li><i class="fa fa-plus-square-o"></i><a href="#">Nuevo proyecto</a></li>
                    </ul>
                </li>
                <li class="menu-item-has-children active dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="menu-icon fa fa-wrench"></i>Constructores</a>
                    <ul class="sub-menu children dropdown-menu">
                        <li><i class="fa fa-table"></i><a href="#">Listado</a></li>
                        <li><i class="fa fa-plus-square-o"></i><a href="#">Añadir constructor</a></li>
                    </ul>
                </li>
                <li class="menu-item-has-children active dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="menu-icon fa fa-map-o"></i>Arquitectos</a>
                    <ul class="sub-menu children dropdown-menu">
                        <li><i class="fa fa-table"></i><a href="#">Listado</a></li>
                        <li><i class="fa fa-plus-square-o"></i><a href="#">Añadir arquitecto</a></li>
                        <li><i class="fa fa-plus-square-o"></i><a href="#">Añadir arquitecto técnico</a></li>
                    </ul>
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </nav>
</aside><!-- /#left-panel -->

<!-- Right Panel -->
<div id="right-panel" class="right-panel">
    <!-- Header-->
    <header id="header" class="header">
        <div class="header-menu">
            <div class="col-sm-7">
                <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa-chevron-left"></i></a>
            </div>
            <div class="col-sm-5">
                <div class="user-area dropdown float-right">
                    {% if not is_granted('ROLE_USER') %}
                        <a class="btn btn-outline-success my-2 my-sm-0" href="#">Log In</a>
                    {% else %}
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-user fa-3"></i> {{ app.user.email }}
                        </a>
                        <div class="user-menu dropdown-menu">
                            <a class="nav-link text-danger" href="#"><i class="fa fa-power-off"></i> Logout</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </header><!-- /header -->
    {% block body %}
        <!-- Header-->
        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>{% block sectiontitle %}{% endblock %}</h1>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
</div><!-- /#right-panel -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
<script type="text/javascript">
    $.noConflict();

    jQuery(document).ready(function($) {
        "use strict";

        $('#menuToggle').on('click', function() {
            $('body').toggleClass('open');
        });

    });

</script>
{% block javascripts %}{% endblock %}
</body>
</html>