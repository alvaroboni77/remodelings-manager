{% extends 'base.html.twig' %}

{% block body %}
{{ parent() }}
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Listado de constructores</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block sectiontitle %}Constructores{% endblock %}